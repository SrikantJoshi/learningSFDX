<aura:component controller="AccountController" implements="flexipage:availableForRecordHome,force:hasRecordId" access="global">
     
    <aura:attribute type="Account[]" name="acctList"/>
    <aura:attribute name="mycolumns" type="List"/>
    <aura:attribute name="draftValues" type="Object" default="[]"/>
    <aura:attribute name="sortedBy"
                type="String" />
	<aura:attribute name="sortedDirection"
                type="Boolean"
                default="true" />
     
    <aura:handler name="init" value="{!this}" action="{!c.fetchAcc}"/>
     
    <lightning:datatable data="{! v.acctList }"
                         aura:id="accountDataTable"
                         columns="{! v.mycolumns }"
                         keyField="Id"
                         onsave="{!c.handleSave}"
                         sortedBy="{!v.sortedBy}"
                     	 sortedDirection="{!v.sortedDirection}"
                         onsort="{!c.updateColumnSorting}"
                         />

     
</aura:component>